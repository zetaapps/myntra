<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/no_padding_margin"
        android:showDividers="middle"
        android:divider="@color/divider_color"
        android:paddingLeft="@dimen/navigation_padding_left"
        android:paddingRight="@dimen/no_padding_margin"
        android:paddingStart="@dimen/navigation_padding_left">

        <zeta.android.myntra.views.common.ZetaTextView
            android:id="@+id/nav_right_secondary_settings"
            style="@style/NavigationText.SubMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/no_padding_margin"
            android:layout_marginLeft="@dimen/navigation_padding_left"
            android:layout_marginRight="@dimen/no_padding_margin"
            android:layout_marginStart="@dimen/navigation_padding_left"
            android:drawableLeft="@drawable/ic_settings_black_24dp"
            android:drawablePadding="@dimen/default_4x_padding_margin"
            android:drawableTint="@color/colorPrimary"
            android:gravity="center|left"
            android:text="@string/myntra_navigation_left_secondary_menu_settings"
            tools:ignore="RtlHardcoded"
            tools:text="test" />

        <zeta.android.myntra.views.common.ZetaTextView
            android:id="@+id/nav_right_secondary_about"
            style="@style/NavigationText.SubMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/no_padding_margin"
            android:layout_marginLeft="@dimen/navigation_padding_left"
            android:layout_marginRight="@dimen/no_padding_margin"
            android:layout_marginStart="@dimen/navigation_padding_left"
            android:drawableLeft="@drawable/ic_info_black_24dp"
            android:drawablePadding="@dimen/default_4x_padding_margin"
            android:drawableTint="@color/colorPrimary"
            android:gravity="center|left"
            android:text="@string/myntra_navigation_left_secondary_menu_about"
            tools:ignore="RtlHardcoded"
            tools:text="test2" />

    </LinearLayout>

</merge>